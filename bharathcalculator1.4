def calculator():
    try:
        num1 = float(input("Enter the first number: "))
        num2 = float(input("Enter the second number: "))
        
        addition_result = num1 + num2
        subtraction_result = num1 - num2
        multiplication_result = num1 * num2

        # Check if num2 is not zero to avoid division by zero
        if num2 != 0:
            division_result = num1 / num2
            print(f"The result of {num1} / {num2} is: {division_result}")
        else:
            print("Cannot perform division. The second number cannot be zero.")

        print(f"The result of {num1} + {num2} is: {addition_result}")
        print(f"The result of {num1} - {num2} is: {subtraction_result}")
        print(f"The result of {num1} * {num2} is: {multiplication_result}")

    except ValueError:
        print("Invalid input. Please enter valid numbers.")

if __name__ == "__main__":
    calculator()
